{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "lib": ["dom", "dom.iterable"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", ".git", "test"]
}
